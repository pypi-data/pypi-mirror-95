{
  "$schema": "http://json-schema.org/schema#",
  "description": "Schema for PyHTTPIntercept handler config",

  "definitions": {

    "scenario": {
      "type": "object",
      "properties": {
        "description": {"type": "string"},
        "modifiers": {
          "type": "array",
          "items": { "$ref": "#/definitions/modifier" }
        }
      },
      "required": ["description", "modifiers"],
      "additionalProperties": false
    },

    "modifier": {
      "type": "object",
      "properties": {
        "handler": {"type": "string"},
        "modifier": {"type": "string"},
        "active": {"type": "boolean"},
        "filter": {"type": "string"},
        "override": {"type": "string"},
        "params": {"type": ["string", "object", "array", "number", "boolean"]}
      },
      "required": ["active"],
      "additionalProperties": false
    }

  },

  "type": "object",
  "additionalProperties": { "$ref": "#/definitions/scenario" }
}