            param)).split(",")
        # return [CLI_OPTIONS_FROM_PROPERTIES_FILE.get(param)]

    if not api_name:
        if os.environ.get('PYTEST_CURRENT_TEST'):
            api_name = os.environ.get('PYTEST_CURRENT_TEST').split(':')[0].split(
                '/')[-1].replace("test", "").replace(".py", "").replace("_", "/")
