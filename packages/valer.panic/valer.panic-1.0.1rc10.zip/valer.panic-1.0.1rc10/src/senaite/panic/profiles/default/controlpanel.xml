<?xml version="1.0"?>

<!--
This creates an action in Site Setup control panel in Plone. Actions are bundled
in categories. In Plone 4, only "Member", "Plone" and "Products" are supported.
-->

<object name="portal_controlpanel"
        xmlns:i18n="http://xml.zope.org/namespaces/i18n">

  <configlet
    title="Panic Settings"
    action_id="senaite.panic"
    appId="senaite.panic"
    category="Products"
    condition_expr=""
    icon_expr="string:++resource++senaite.panic.static/img/icon.png"
    url_expr="string:${portal_url}/@@panic-controlpanel"
    visible="True"
    i18n:domain="senaite.panic"
    i18n:attributes="title">
    <permission>senaite.core: Manage Bika</permission>
  </configlet>

</object>
