<registry>
    <record name="ftw.permissionmanager.manage_types">
        <field type="plone.registry.field.Tuple">
            <title>Permissionmanager types</title>
            <description>A list of managed content types (used for catalo query)</description>
            <value_type type="plone.registry.field.TextLine" />
        </field>
        <value>
        <element>Folder</element>
        </value>
    </record>
    <record name="ftw.permissionmanager.fields_to_search">
        <field type="plone.registry.field.Tuple">
            <title>Fields to search</title>
            <description>A List of fields searched in the sharing tab</description>
            <value_type type="plone.registry.field.TextLine" />
        </field>
        <value>
        <element>name</element>
        <element>fullname</element>
        <element>email</element>
        </value>
    </record>

</registry>