<?xml version="1.0" encoding="UTF-8"?>

<style-scheme id="pyedit" _name="PyEdit" version="1.0">
  <author>Astral Dev</author>
  <_description>Color scheme used in PyEdit</_description>

  <color name="red"                         value="#b93d3d"/>
  <color name="blue"                        value="#3f46aa"/>
  <color name="dark-blue"                   value="#1d61a5"/>
  <color name="dark-red"                    value="#8d2e2e"/>
  <color name="dark-green"                  value="#418647"/>
  <color name="grey"                        value="#cccccc"/>
  <color name="yellow"                      value="#d8db19"/>
  <color name="white"                       value="#FFFFFF"/>
  <color name="brown"                       value="#B07E00"/>
  <color name="black"                       value="#111111"/>
  <color name="green"                       value="#66af29" />

  <!--Base0 slight ash-->
  <color name="base0"                       value="#4d4c4c"/>
  <color name="base1"                       value="#3d93a8"/>
  <!--Others-->
  <color name="white1"                      value="#dddddd"/>


  <!-- Global Settings -->
  <!-- Overriden by css -->

  <style name="text"                        foreground="white" background="#181818" font-family="monospace"/>

  <style name="current-line"                background="#222222"/>

  <style name="line-numbers"                foreground="white" background="#181818"/>
  <!--not implemented
  <style name="right-margin"                foreground="black" background="black"/>
  -->
  <!-- <style name="bracket-match"               foreground="#daf8ff" background="base1"/> -->
  <style name="bracket-mismatch"            foreground="red"/>

  <style name="draw-spaces"                 foreground="#d3d7cf"/>
  <style name="background-pattern"          background="#f3f3f3"/>

  <!-- Search Matching -->
  <style name="search-match"                background="yellow"/>

  <!-- Comments -->
  <style name="def:comment"                 foreground="base0" italic="true"/>
  <style name="def:shebang"                 foreground="base0"/>
  <style name="def:doc-comment"             foreground="blue"/>
  <style name="def:doc-comment-element"     bold="true"/>

  <!-- Types -->
  <style name="def:type"                    foreground="dark-blue"/>

  <!-- Constants -->
  <style name="def:constant"                foreground="white"/>

  <style name="def:decimal"                 foreground="white1"/>
  <style name="def:base-n-integer"          foreground="white1"/>
  <style name="def:floating-point"          foreground="white1"/>
  <style name="def:preprocessor"            foreground="#e9e2a0"/>
  <style name="def:complex"                 use-style="def:base-n-integer"/>
  <style name="def:special-constant"          foreground="red" />
  
  <style name="desktop:key"                 foreground="green" />
  <style name="desktop:boolean"                 foreground="red" />
  <style name="desktop:group"              foreground="blue" italic="true" />
  <!-- CSS Styles -->

  <style name="def:character"               foreground="#9b5395"/>
  <style name="def:string"                  foreground="#be7a5f"/>
  <style name="def:special-char"            foreground="#8b5324"/>
  <style name="def:builtin"                 foreground="red"/>
  <style name="def:keyword"                 foreground="#2a4eb3"/>
  <style name="xml:attribute-name"          foreground="dark-green"/>
  <style name="xml:element-name"            bold="true" foreground="#7de497"/>
  <style name="xml:entity"                  foreground="blue"/>
  <style name="xml:cdata-delim"             foreground="#008080" bold="true"/>
  <style name="xml:processing-instruction"  background="#7de497"/>
  <style name="xml:doctype"                 foreground="dark-red" bold="true"/>
  <style name="js:object"                   foreground="dark-green"/>
  <style name="js:constructors"             bold="true"/>
  
  <!-- Statements -->
  <style name="def:statement"               bold="true" />

  <style name="css:universal-selector"      foreground="dark-blue"/>
  <style name="css:color"                    foreground="base1"  bold="true"/>
  <style name="css:pseudo-class"            use-style="def:string"/>
  <style name="css:class-selector"           foreground="#0d7797"/>
  <style name="c:preprocessor"                  foreground="#ad33b1" />
  
  <!-- Language specific styles -->
  <style name="markdown:code"             foreground="#4f8d1b" />
  <style name="python:string-conversion"    background="#BEBEBE"/>
  <style name="python:module-handler"       use-style="def:character"/>

  <style name="python:special-variable"     foreground="#3158c2" />

  <style name="python:builtin-object"       foreground="#266d26" />
  <style name="python:builtin-function"     foreground="#369dd7"/>

  <style name="python:boolean"              foreground="red" />
  <style name="python:class-name"           foreground="#97af83" />
  <style name="python:function-name"        foreground="#e9e2a0" />

  <style name="scheme:parens"               use-style="def:statement"/>
  <style name="scheme:any-function"         foreground="dark-red" />

</style-scheme>