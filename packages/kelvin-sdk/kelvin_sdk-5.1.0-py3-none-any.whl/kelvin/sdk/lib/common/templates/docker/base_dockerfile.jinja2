{% block image_dependencies %}
{% if system_packages %}
RUN export DEBIAN_FRONTEND=noninteractive; apt-get update && \
    apt-get install -y --no-install-recommends {{system_packages}} && \
    apt-get clean && rm -rf /var/lib/apt/lists/*
