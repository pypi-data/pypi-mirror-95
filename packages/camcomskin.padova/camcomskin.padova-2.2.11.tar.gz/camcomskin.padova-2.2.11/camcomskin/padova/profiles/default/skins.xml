<?xml version="1.0"?>
<object name="portal_skins" allow_any="False" cookie_persistence="False"
   default_skin="camcomskin_padova">

 <object name="camcomskin_padova_custom_images"
    meta_type="Filesystem Directory View"
    directory="camcomskin.padova:skins/camcomskin_padova_custom_images"/>
 <object name="camcomskin_padova_custom_templates"
    meta_type="Filesystem Directory View"
    directory="camcomskin.padova:skins/camcomskin_padova_custom_templates"/>
 <object name="camcomskin_padova_styles"
    meta_type="Filesystem Directory View"
    directory="camcomskin.padova:skins/camcomskin_padova_styles"/>

 <skin-path name="camcomskin_padova" based-on="Sunburst Theme">
  <layer name="camcomskin_padova_custom_images"
     insert-after="custom"/>
  <layer name="camcomskin_padova_custom_templates"
     insert-after="camcomskin_padova_custom_images"/>
  <layer name="camcomskin_padova_styles"
     insert-after="camcomskin_padova_custom_templates"/>
 </skin-path>

</object>
